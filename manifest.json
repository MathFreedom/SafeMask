{
  "manifest_version": 3,
  "name": "SafeMask â€“ Local PII Anonymizer",
  "version": "0.1.0",
  "description": "Privacy-by-design anonymization and de-anonymization, fully local. Deterministic HMAC tokens, encrypted vault, diff view, and optional Chrome built-in AI.",
  "offline_enabled": true,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/ui.css",
        "src/anonymizer.js",
        "src/detectors.js",
        "src/crypto.js",
        "src/diff.js",
        "src/ai.js",
        "icons/icon16.png",
        "icons/icon48.png",
        "icons/icon128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "toggle_overlay": {
      "suggested_key": {
        "default": "Ctrl+Shift+M"
      },
      "description": "Toggle SafeMask overlay"
    },
    "anonymize_selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      },
      "description": "Anonymize selected text (opens SafeMask)"
    },
    "deanonymize_selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+D"
      },
      "description": "De-anonymize tokens in selected text"
    },
    "open_settings": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Open SafeMask settings"
    }
  }
}


